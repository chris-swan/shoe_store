<html>
<head>
    <title>Brands</title>
</head>
<body>
    <h1>Brands</h1>

    {% if brands is not empty %}
        <p>Here are all the brands:</p>
        <ul>
            {% for brand in brands %}
                <li><a href="/brand/{{ brand.getId }}">{{ brand.getBrandName }}</a></li>
            {% endfor %}
        </ul>
    {% else %}
        <p>There are no brands</p>
    {% endif %}

    <h3>Add a brand</h3>
    <form action='/brands' method='post'>
        <label for='brand_name'>brand name</label>
        <input id='brand_name' name='brand_name' type='text'>

        <button type='submit'>Add brand</button>
    </form>

    <form action="/delete_brands" method="post">
        <button type="submit">Delete ALL brands</button>
    </form>

    <p><a href='/'>Home</a></p>
</body>
</html>
